model Product {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  prices Prices[]
  image  String

  model              String?
  modifier           String?
  manufacturer       String?
  memoryInterface    String?
  memory             String?
  processorFrequency String?
  guarantee          String?
}

model Prices {
  id        Int     @id @default(autoincrement())
  price     Decimal
  currency  String
  store     String
  product   Product @relation(fields: [productId], references: [id])
  productId Int

  @@unique([productId, store], name: "storeIdentifier")
}

